<div class="navbar-wagon <%= business_signed_in? ? "navbar-business" : "navbar-public" %>">

  <% if business_signed_in? %>
    <%= link_to business_path(current_business), class: "navbar-wagon-brand" do %>
        <%= image_tag "djinn2.png" %>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "djinn2.png" %>
    <% end %>
  <% end %>

  <div class="navbar-wagon-right">

    <% if business_signed_in? %>

      <% link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <%= link_to business_path(current_business), class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-home"></i> Homepage
      <% end %>
      <%= link_to edit_business_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-user"></i> Edit Profile
      <% end %>

      <%= link_to edit_business_path(current_business), class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-pencil"></i> Edit Page
      <% end %>

      <%= link_to business_bookings_path(current_business), class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-bell"></i> View Bookings
      <% end %>

      <%= link_to destroy_business_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
        <i class="fa fa-sign-out"></i> Log Out
      <% end %>

    <% else %>

      <% if params[:action] == "home" %>
        <!-- Login text link -->
        <div class="navbar-login">
        <%= link_to "Sign in", new_business_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
