<div class="banner-content" style="background-image: linear-gradient(-225deg, rgba(0,231,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%# cl_image_path @business.photo.path, height: 20%, width: 80%, crop: :fill %>');">

  <div class="banner-content text-center">
      <h1><strong><%= @business.name %></strong></h1>
      <h3><%= @business.address %></h3>

      <%= button_to "Book", business_path(@business.id), method: 'get', class: "btn btn-primary" %>
  </div>

</div>


<div class="container">
  <div class="row" style="margin-top: 50px">
    <div class="col-xs-12 col-sm-4 col-md-4 card">
      <% if @business.description? %>
        <p><%= @business.description %></p>
      <% else %>
        <p>Write about <%=@business.name%> here.
          <%= link_to edit_business_path(current_business) do %>
            <i class="fa fa-pencil"></i></p>
          <% end %>
        <% end %>
      </div>
    <div class="col-xs-12 col-sm-5 col-sm-offset-2 col-md-6 card" id="map" style="width: 45%; height: 250px;"></div>
  </div>
</div>


<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <h4>Our Services</h4>
      <p></p>
      <%= link_to edit_business_path(current_business) do %>
      Add new <i class="fa fa-plus"></i> <% end %>
    </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <%= image_tag "djinn2.png" %>
      </div>
  </div>
</div>



<div class="container" style="margin-top: 100px; margin-bottom: 50px;">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for [@business, @booking] do |f| %>
        <%= f.input :email, required: true, placeholder: "your@name.com" %>
        <%= f.input :name, placeholder: "George D." %>
        <%= f.input :phone, placeholder: "+44 7802 969 373" %>
        <%= f.association :service %>
      <div class="form-actions">
        <%= f.submit "Book", class: "btn btn-primary", style: "width: 100%" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers([
            {
              "lat": <%= @business.latitude %>,
              "lng": <%= @business.longitude %>
            }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
