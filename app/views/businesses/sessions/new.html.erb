<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <h2 class="text-center">Acces your business</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true , placeholder: "shoreditch-dentist@gmail.com"%>
          <%= f.input :password, required: true, placeholder: "•••••••" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary", style: "width: 100%" %>
        </div>
      <% end %>

      <%= render "businesses/shared/links" %>
    </div>
  </div>
</div>


