<div class="container">
  <div class="row">
   <div class="col-xs-12">
     <h2>Page Description</h2>
     <%= simple_form_for @business do |f| %>
       <%= f.input :description %>
       <%= f.submit "Update Description" %>
     <% end %>

     <h2>Services</h2>
     <%= simple_form_for [@business, @service] do |f| %>
       <div class="row">
         <div class="col-xs-12">
          <%= f.input :name %>
         </div>
       </div>
       <div class="row">
         <div class="col-xs-6">
           <%= f.input :price %>
         </div>
         <div class="col-xs-6">
           <%= f.input :duration %>
         </div>
       </div>
       <div class="row">
         <div class="col-xs-12">
           <%= f.submit "Add Service" %>
         </div>
       </div>
     <% end %>

     <h2>Logo, Picture and background</h2>
      <%= simple_form_for @business do |f| %>
        <%= f.input :logo %>
        <%= f.input :logo_cache, as: :hidden %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :background, as: :minicolors %>
        <%= f.submit "Apply changes"%>
      <% end %>
   </div>
  </div>
</div>

