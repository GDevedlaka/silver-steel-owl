<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "businessStock.jpg" %>');">
  <div class="container">
    <div class="row" style="position: relative" >
      <h1>Some Stuff</h1>
      <p>Very cool stuff, useful and smart</p>
      <%= form_tag businesses_path, method: "get", class: "form-inline" do %>
        <%= text_field_tag :date, nil, class: 'form-control' %>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#date').datetimepicker({
        format : 'DD/MM/YYYY HH:mm',
        stepping: 5,
      });
    });
  <% end %>
<% end %>
